<h1>Register an enterprise</h1>

<.form let={f} for={@changeset} action={Routes.enterprise_registration_path(@conn, :create)}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input  f, :name, required: true %>
  <%= error_tag f, :name %>

  <div>
    <%= submit "Register" %>
  </div>
</.form>

